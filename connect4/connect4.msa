## @RobotoRaccoon

*:/connect4 [$p1] [$p2] = >>>
_verify_op('broken');
    include('includes.ms');

    @p1 = to_lower($p1);
    @p2 = to_lower($p2);

    switch(@p1) {
        case '':
        case 'help':
            _C4_help(@p2);

        case 'join':
        case 'enter':
            _C4_join();

        case 'quit':
        case 'leave':
            _C4_quit();

        case 'play':
            _C4_play(@p2);

        case 'stats':
        case 'statistics':
            if (@p2 == '') {
                _no_console('/connect4 stats <player>');
                @user = player();
            } else {
                @user = _autocomplete_player(@p2);
            }

            _C4_printStats(@user);

        case 'reset':
            _verify_staff();
            _C4_reset();
            msg(colorize('&cYou have forcefully ended the current round of &4Connect 4&c.'));

        default:
            _error('/connect4 help');
    }
<<<
