## @RobotoRaccoon

*:/connect4 [$p1] [$p2] = >>>
    include('commands.ms');
    include('includes.ms');

    @p1 = to_lower($p1);
    @p2 = to_lower($p2);

    switch(@p1) {
        case '':
        case 'help':
            _C4_cmd_help(@p2);

        case 'join':
        case 'enter':
            _C4_cmd_join();

        case 'quit':
        case 'leave':
            _C4_cmd_quit();

        case 'play':
            _C4_cmd_play(@p2);

        case 'stats':
        case 'statistics':
            _C4_cmd_stats(@p2);

        case 'reset':
            _C4_cmd_reset();

        default:
            _error('/connect4 help');
    }
<<<
