*:/dpunt [$p] [$pow] [$] = >>>
    _verify_staff();
    if ($p == '') {
        _no_console();
        @p = player();
    } else {
        @p = _autocomplete_player($p, true);
    }

    if (player() == '~console') {
        @end = pcursor(@p);
    } else {
        @end = pcursor();
    }

    @start = ploc(@p);
    @x = @end['x'] - @start['x'];
    @y = @end['y'] - @start['y'];
    @z = @end['z'] - @start['z'];

    @denom = (@x**2 + @y**2 + @z**2)**0.5 / 5
    @x /= @denom;
    @y /= @denom;
    @z /= @denom;

    ## Resistance (?)
    set_peffect(@p,11,50,5,true,false);
    set_pvelocity(@p,array('x':@x,'y':@y,'z':@z));
<<<
